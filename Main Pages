    <script>
        document.querySelectorAll('.room').forEach(room => {
            room.addEventListener('click', function() {
                let dropdown = this.querySelector('.dropdown');
                if (!dropdown) {
                    dropdown = document.createElement('div');
                    dropdown.classList.add('dropdown');
                    dropdown.innerHTML = `
                        <button onclick="claimRoom('${this.dataset.room}')">Claim Room</button>
                        <button onclick="reportOccupied('${this.dataset.room}')">Report Occupied</button>
                        <button onclick="reportEmpty('${this.dataset.room}')">Report Room Empty</button>
                        <button onclick="sendMessage('${this.dataset.room}')">Send Message to Friends</button>
                    `;
                    this.appendChild(dropdown);
                }
                dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
            });
        });

        function claimRoom(room) {
            const roomElement = document.querySelector(`[data-room="${room}"]`);
            if (roomElement.classList.contains('occupied')) {
                alert(`Room ${room} is already occupied! You cannot claim it.`);
            } else {
                alert(`You have claimed room ${room}.`);
                roomElement.classList.add('occupied');
                roomElement.style.backgroundColor = 'maroon';
            }
        }

        function reportOccupied(room) {
            alert(`Room ${room} reported as occupied.`);
            const roomElement = document.querySelector(`[data-room="${room}"]`);
            roomElement.classList.add('occupied');
            roomElement.style.backgroundColor = 'maroon';
        }

        function reportEmpty(room) {
            alert(`Room ${room} reported as empty.`);
            const roomElement = document.querySelector(`[data-room="${room}"]`);
            roomElement.classList.remove('occupied');
            roomElement.style.backgroundColor = 'gold';
        }

        function sendMessage(room) {
            alert(`Message sent to friends to go to room ${room}.`);
        }
    </script>
</body>
